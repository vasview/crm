        <li class='menu__item'><%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'menu__item-link' %></li>
      <% else %>
        <li class='menu__item'><%= link_to 'Войти', new_user_session_path, class: 'menu__item-link' %></li>
