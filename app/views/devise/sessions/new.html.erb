<div class="form__wrapper">
  <h2><%= t('Войти') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form__row">
      <%= f.label :email, class: 'form__label' %>
      <%= f.email_field :email, autofocus: true, class: 'form__input' %>
    </div><br />

    <div class="field form__row">
      <%= f.label :password, class: 'form__label'%>
      <%= f.password_field :password, autocomplete: "off", class: 'form__input' %>
    </div><br />

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %><br />

    <div class="actions">
      <%= f.submit "Вход", class: 'button form__button' %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>