<%= f.fields_for @executive do |executive_form| %>
  <%= executive_form.fields_for @representative do |rep_form| %>
  <div class="form__row">
    <%= label_tag :firstname, "Имя: ",  class: 'form__label form__label-nested'%> <%= rep_form.text_field :firstname, class: 'form__input' %>
  </div>
  <div class="form__row">
    <%= label_tag :middlename, "Отчество: ", class: 'form__label form__label-nested'%> <%= rep_form.text_field :middlename, class: 'form__input' %>
  </div>
  <div class="form__row">
    <%= label_tag :lastname, "Фамилия: ", class: 'form__label form__label-nested'%> <%= rep_form.text_field :lastname, class: 'form__input' %>
  </div>
  <div class="form__row">
      <%= label :job_position_id, "Должность руководителя: ", class: 'form__label form__label-nested' %>
      <%= rep_form.collection_select(:job_position_id, JobPosition.all, :id, :title, { promp: true }, { class: 'form__input form__input-collection' } ) %>
      <% end %>
    </div>
<% end %>
