<div class="table__wrapper">
  <table class="general__table job_position__table">
    <tr class="table__row-header">
      <th>Название сектора экономики</th>
      <th>Описание</th>
      <th>Статус</th>
      <th>Действие</th>
    </tr>
    <% @industry_all.each do |industry| %>
      <tr class="table__item-row table__row_without_pointer">
        <td class="table__item"><%= industry.title %></td>
        <td class="table__item"><%= industry.description %></td>
        <td class="table__item">
          <%= industry.status == 'active' ? 'Действующий' : 'Архивный' %>
        </td>
        <td class="table__item table__item-action">
          <%= link_to "Редактировать", edit_admin_industry_path(industry)%>&nbsp;|&nbsp;
          <%= link_to_if industry.status == 'active',
            "Удалить", admin_industry_path(industry), :method => :delete, data: {:confirm => "Вы уверены, что хотите удалить должность '#{industry.title}'?" }, :title => "Удалить #{industry.title}" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
