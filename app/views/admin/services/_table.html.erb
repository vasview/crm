<div class="table__wrapper">
  <table class="general__table service__table">
    <tr class="table__row-header">
      <th>Название услуги</th>
      <th>Описание</th>
      <th>Цена услуги</th>
      <th>Цена услуги для комитета</th>
      <th>Статус</th>
      <th>Действие</th>
    </tr>
    <% @services.each do |service| %>
      <tr class="table__item-row table__row_without_pointer">
        <td class="table__item"><%= service.name %></td>
        <td class="table__item"><%= service.description %></td>
        <td class="table__item"><%= service.cost %></td>
        <td class="table__item"><%= service.committee_cost %></td>
        <td class="table__item">
          <%= service.status == 'active' ? 'Дествующая' : 'Архивная' %>
        </td>
        <td class="table__item table__item-action">
          <%= link_to "Редактировать", edit_admin_service_path(service)%>&nbsp;|&nbsp;
          <%= link_to_if service.status == 'active',
            "Удалить", admin_service_path(service), :method => :delete, data: {:confirm => "Вы уверены, что хотите удалить услугу '#{service.name}'?" }, :title => "Удалить #{service.name}" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
